@{
    ViewData["Title"] = "Tutoring Page";
    decimal hourlyRate = 50.00m; // Set hourly rate
}
<h1 class="display-4"">Want to learn how to play?</h1>

<p>Use the boxes below to calculate how much it would cost for a lesson about Ultimate Frisbee!</p>

<br />
<br />

<h2>Tutoring Cost Calculator</h2>

<form id="calculatorForm">
	<div><!-- input box for user to enter desired number of hours -->
        <label for="hoursNeeded">Enter Hours Needed:</label>
        <input type="number" id="hoursNeeded" min="1" required>
        <span id="error-message" style="color: red; display: none;">Please enter a positive number.</span>
    </div>

    <br />

	<div><!-- set, preprogrammed hour wage displayed in a box -->
        <label>Hourly Rate:</label>
        <input type="text" value="@hourlyRate.ToString("C")" readonly>
    </div>

    <br />

    <!-- calculate button to perform java function -->
    <button type="button" onclick="calculateTotal()">Calculate Total</button>

    <br />
    <br />

    <div><!-- display total cost of services in a box -->
        <label>Total Cost:</label>
        <input type="text" id="totalCost" readonly>
    </div>
</form>


<span id="hourlyRate" style="display: none;">@hourlyRate</span>

<script src="~/js/site.js"></script>